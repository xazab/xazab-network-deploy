{
  "network": "{{ 'mainnet' if xazab_network == 'mainnet' else 'testnet' }}",
  "port": 3001,
  "services": [
    "xazabd",
    "@xazab/insight-api",
    {% if ui %}"@xazab/insight-ui",{% endif %}
    "web"
  ],
  "servicesConfig": {
    "xazabd": {
      "connect": [{
        "rpchost": "{{ private_ip }}",
        "rpcport": {{ xazabd_rpc_port }},
        "rpcuser": "{{ xazabd_rpc_user }}",
        "rpcpassword": "{{ xazabd_rpc_password }}",
        "zmqpubrawtx": "tcp://{{ private_ip }}:{{ xazabd_zmq_port }}",
        "zmqpubhashblock": "tcp://{{ private_ip }}:{{ xazabd_zmq_port }}"
      }]
    },
    "@xazab/insight-api": {
      "disableRateLimiter": true
    }
  }
}
